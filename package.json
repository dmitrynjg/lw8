{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "stylelint": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    },
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "validate-html": "html-validate src",
    "stylelint": "stylelint src/**/*.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "build": "webpack -p",
    "start": "webpack-dev-server --history-api-fallback --inline --progress",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server html-validate jshint",
    "buildinstall": "npm i html-webpack-plugin mini-css-extract-plugin css-loader html-replace-webpack-plugin",
    "testinstall": "npm i mocha chai --save-dev",
    "test": "mocha"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "css-loader": "^3.3.2",
    "html-replace-webpack-plugin": "^2.5.6"
  }
}
